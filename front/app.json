{
  "expo": {
    "name": "aplicativo2.0",
    "slug": "aplicativo2.0",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "platforms": ["ios", "android", "web"],

    "ios": {
      "supportsTablet": true
    },

    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true
    },

    "web": {
      "favicon": "./assets/icon.png",
      "bundler": "metro",
      "backgroundColor": "#ffffff",
      "themeColor": "#6200ee",
      "manifest": {
        "name": "Aplicativo 2.0",
        "short_name": "App 2.0",
        "description": "Aplicativo 2.0 — versão PWA",
        "background_color": "#ffffff",
        "theme_color": "#6200ee",
        "display": "standalone",
        "orientation": "portrait",
        "start_url": "/",
        "scope": "/",
        "icons": [
          {
            "src": "./assets/icon.png",
            "sizes": "192x192",
            "type": "image/png"
          },
          {
            "src": "./assets/icon.png",
            "sizes": "512x512",
            "type": "image/png"
          }
        ]
      }
    }
  }
}
